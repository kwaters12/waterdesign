%navbar.nav.navbar-fixed-top
  %ul.nav.navbar-nav.titles
    %li
      - if request.original_url === root_url
        %a{href: "#main", id: "main-nav"}KW
      - else
        = link_to "KW", root_url, id: "main-nav"
    %li
      - if request.original_url === root_url
        %a{href: "#web", id: "web-nav"} WEB
      - else
        = link_to "WEB", root_url, id: "web-nav"
    %li
      - if request.original_url === root_url
        %a{href: "#graphic", id: "graphic-nav"} GRAPHIC 
      - else
        = link_to "GRAPHIC", root_url, id: "graphic-nav"
    %li
      - if request.original_url === root_url
        %a{href: "#product", id: "product-nav"} PRODUCT
      - else
        = link_to "PRODUCT", root_url, id: "product-nav"
    %li.icon
      - if request.original_url === root_url
        %a{href: "#contact" }
          %i.fa.fa-github
      - else
        = link_to root_url do
          %i.fa.fa-github
    %li.icon
      - if request.original_url === root_url
        %a{href: "#contact"}
          %i.fa.fa-linkedin
      - else
        = link_to root_url do
          %i.fa.fa-linkedin
    %li.icon
      - if request.original_url === root_url
        %a{href: "#contact"}
          %i.fa.fa-twitter 
      - else
        = link_to root_url do
          %i.fa.fa-twitter
    %li.icon
      - if request.original_url === root_url
        %a{href: "#contact"}
          %i.fa.fa-tumblr
      - else
        = link_to root_url do
          %i.fa.fa-tumblr
    
    - if current_user && current_user.is_admin
      %li
        = link_to "NEW PROJECT", new_project_path
      %li
        = link_to "SIGN OUT", destroy_user_session_path, method: :delete 
:javascript
  $('#web').waypoint(function(direction) {
      if (direction === 'down') {
          $("#web-nav").animate({backgroundColor: 'rgba(25,148,255,0.5)'},5000)
       }
       else {
          $("#web-nav").animate({backgroundColor: 'rgba(240,255,0,0.5)'},5000)
       }
    });
    $("#web").waypoint(function(event, direction) {
       if (direction === 'down') {
          $("#web-nav").animate({backgroundColor: 'rgba(25,148,255,0.5)'},5000)
       }
       else {
          $("#web-nav").animate({backgroundColor: 'rgba(240,255,0,0.5)'},5000)
       }
    });

    $("#graphic").waypoint(function(event, direction) {
       if (direction === 'down') {
          $("body").animate({backgroundColor: 'rgba(255,0,0,0.5)'},5000)
       }
       else {
          $("body").animate({backgroundColor: 'rgba(25,148,255,0.5)'},5000)
       }
    });

    $("#product").waypoint(function(event, direction) {
       if (direction === 'down') {
          $("body").animate({backgroundColor: 'rgba(96,0,179,0.5)'},5000)
       }
       else {
          $("body").animate({backgroundColor: 'rgba(255,0,0,0.5)'},5000)
       }
    });

    $("#contact").waypoint(function(event, direction) {
       if (direction === 'down') {
          $("body").animate({backgroundColor: 'rgba(60,200,0,0.5)'},5000)
       }
       else {
          $("body").animate({backgroundColor: 'rgba(96,0,179,0.5)'},5000)
       }
    });



